rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Vérifie si l'utilisateur est authentifié
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function: Vérifie si l'utilisateur appartient au foyer
    function belongsToHousehold(householdId) {
      return isSignedIn() && 
        householdId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.households;
    }
    
    // Helper function: Vérifie si c'est le propriétaire du document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function: Vérifie si deux utilisateurs partagent au moins un foyer
    function shareHousehold(userId) {
      let currentUserHouseholds = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.households;
      let targetUserHouseholds = resource.data.households;
      return currentUserHouseholds.hasAny(targetUserHouseholds);
    }
    
    // RÈGLES POUR LES UTILISATEURS
    match /users/{userId} {
      // Lecture: son propre profil OU si vous partagez au moins un foyer
      allow read: if isSignedIn() && (
        isOwner(userId) || 
        shareHousehold(userId)
      );
      
      allow create: if isOwner(userId) && 
                      request.resource.data.keys().hasAll(['email', 'displayName', 'activeHouseholdId']);
      
      allow update: if isOwner(userId) && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['id', 'email']);
      
      allow delete: if isOwner(userId);
    }
    
    // RÈGLES POUR LES FOYERS (HOUSEHOLDS)
    match /households/{householdId} {
      // Lecture si membre OU si recherche par code d'invitation
      allow get: if isSignedIn() && (
        belongsToHousehold(householdId) || 
        resource.data.invitationCode != null
      );
      
      // List avec limite pour recherche de code
      allow list: if isSignedIn() && (
        belongsToHousehold(householdId) || 
        request.query.limit <= 1
      );
      
      allow create: if isSignedIn();
      
      // Update pour rejoindre un foyer OU si déjà membre
      allow update: if isSignedIn() && (
        belongsToHousehold(householdId) ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
          request.resource.data.members.hasAll(resource.data.members) &&
          request.resource.data.members.size() == resource.data.members.size() + 1 &&
          request.resource.data.members.hasAll([request.auth.uid])
        )
      );

      allow delete: if false;
      
      // SOUS-COLLECTION: comptes_mensuels
      match /comptes_mensuels/{compteId} {
        allow read: if belongsToHousehold(householdId);
        
        allow create: if belongsToHousehold(householdId) &&
                        request.resource.data.keys().hasAll(['moisAnnee', 'loyerTotal', 'apportsAPL', 'statut']) &&
                        request.resource.data.moisAnnee is string &&
                        request.resource.data.loyerTotal is number &&
                        request.resource.data.loyerTotal >= 0;
        
        allow update: if belongsToHousehold(householdId) &&
                        request.resource.data.moisAnnee == resource.data.moisAnnee;
        
        allow delete: if belongsToHousehold(householdId) &&
                        resource.data.statut != "finalisé";
      }
      
      // SOUS-COLLECTION: charges_fixes
      match /charges_fixes/{chargeId} {
        allow read: if belongsToHousehold(householdId);
        
        allow create: if belongsToHousehold(householdId) &&
                        request.resource.data.keys().hasAll(['nom', 'montantMensuel', 'payeur']) &&
                        request.resource.data.montantMensuel is number &&
                        request.resource.data.montantMensuel > 0;
        
        allow update: if belongsToHousehold(householdId);
        
        allow delete: if belongsToHousehold(householdId);
      }
      
      // SOUS-COLLECTION: charges_variables
      // MODIFICATION CRITIQUE : Permettre la lecture si membre DU FOYER OU si bénéficiaire de la charge
      match /charges_variables/{chargeId} {
        allow read: if belongsToHousehold(householdId) || 
                       (isSignedIn() && request.auth.uid in resource.data.beneficiaires);
        
        allow create: if belongsToHousehold(householdId) &&
                        request.resource.data.keys().hasAll(['description', 'montantTotal', 'payeur', 'beneficiaires', 'dateStatistiques', 'dateComptes', 'moisAnnee']) &&
                        request.resource.data.montantTotal is number &&
                        request.resource.data.montantTotal > 0 &&
                        request.resource.data.beneficiaires is list &&
                        request.resource.data.beneficiaires.size() > 0;
        
        allow update: if belongsToHousehold(householdId);
        
        allow delete: if belongsToHousehold(householdId);
      }
      
      // SOUS-COLLECTION: categories
      match /categories/{categorieId} {
        allow read: if belongsToHousehold(householdId);
        
      allow create, update: if belongsToHousehold(householdId) || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(householdId)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.households.hasAny(
          get(/databases/$(database)/documents/users/$(householdId)).data.households
        )
      );
        
        allow delete: if belongsToHousehold(householdId) &&
                        !resource.data.isDefault;
      }
    }
  }
}