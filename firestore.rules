rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function belongsToHousehold(householdId) {
      return isSignedIn() && 
        householdId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.households;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function shareHousehold(userId) {
      let currentUserHouseholds = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.households;
      let targetUserHouseholds = get(/databases/$(database)/documents/users/$(userId)).data.households;
      return currentUserHouseholds.hasAny(targetUserHouseholds);
    }
    
    function sharesHouseholdWithUser(targetUserId) {
      let myHouseholds = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.households;
      let targetUserHouseholds = get(/databases/$(database)/documents/users/$(targetUserId)).data.households;
      return myHouseholds.hasAny(targetUserHouseholds);
    }

    // ==========================================
    // RÈGLES UTILISATEURS
    // ==========================================
    
    match /users/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || shareHousehold(userId));
      
      allow create: if isOwner(userId) && 
                      request.resource.data.keys().hasAll(['email', 'displayName', 'activeHouseholdId']);
      
      allow update: if isOwner(userId) && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['id', 'email']);
      
      allow delete: if isOwner(userId);
    }
    
    // ==========================================
    // RÈGLES FOYERS (HOUSEHOLDS)
    // ==========================================
    
    match /households/{householdId} {
      
      allow get: if isSignedIn() && (
        belongsToHousehold(householdId) || 
        resource.data.invitationCode != null
      );
      
      allow list: if isSignedIn() && (
        belongsToHousehold(householdId) || 
        request.query.limit <= 1
      );
      
      allow create: if isSignedIn();
      
      allow update: if isSignedIn() && (
        belongsToHousehold(householdId) ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
          request.resource.data.members.hasAll(resource.data.members) &&
          request.resource.data.members.size() == resource.data.members.size() + 1 &&
          request.resource.data.members.hasAll([request.auth.uid])
        )
      );

      allow delete: if false;

      // --- SOUS-COLLECTION UNIFIÉE: charges ---
      match /charges/{chargeId} {
        allow read: if belongsToHousehold(householdId) || 
                       (isSignedIn() && request.auth.uid in resource.data.beneficiaires);
        
        allow create: if belongsToHousehold(householdId) &&
                        request.resource.data.keys().hasAll(['description', 'montantTotal', 'payeur', 'type']) &&
                        request.resource.data.montantTotal is number &&
                        request.resource.data.montantTotal > 0 &&
                        (
                          (request.resource.data.type == "variable" && request.resource.data.keys().hasAll(['beneficiaires', 'categorie'])) ||
                          (request.resource.data.type == "fixe" && request.resource.data.keys().hasAll(['jourPrelevementMensuel']))
                        );
        
        allow update: if belongsToHousehold(householdId);
        allow delete: if belongsToHousehold(householdId);
      }

      // --- SOUS-COLLECTION: comptes_mensuels ---
      match /comptes_mensuels/{compteId} {
        allow read: if belongsToHousehold(householdId);
        allow create: if belongsToHousehold(householdId) &&
                        request.resource.data.keys().hasAll(['moisAnnee', 'loyerTotal', 'apportsAPL', 'statut']) &&
                        request.resource.data.loyerTotal is number;
        allow update, delete: if belongsToHousehold(householdId) && resource.data.statut != "finalisé";
      }
      
      // --- SOUS-COLLECTION: charges_fixes (Templates de configuration) ---
      match /charges_fixes/{chargeId} {
        allow read, write: if belongsToHousehold(householdId);
      }
      
      // --- SOUS-COLLECTION: loyer_config ---
      match /loyer_config/{docId} {
        allow read: if belongsToHousehold(householdId);
        allow create, update: if belongsToHousehold(householdId) && docId == "current";
        allow delete: if false;
      }
      
      // --- SOUS-COLLECTION: categories ---
      match /categories/{categorieId} {
        allow read, create, update: if belongsToHousehold(householdId) || sharesHouseholdWithUser(householdId);
        allow delete: if (request.auth.uid == householdId || belongsToHousehold(householdId)) && !resource.data.isDefault;
      }
    }
  }
}